@using udemyWeb1.Haberlesme;
@model List<Doktor>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<h1>Doktorlarımız</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>               
            </th>
            
            <th>
                Doktor Adı
            </th>
            <th>
                Bölümü
            </th>
            <th>
                Ünvanı
            </th>
            <th>
                Doğum Yılı
            </th>
            <th>
                Polikliniği
            </th>
            @if (User.IsInRole(UserRoles.Role_Admin))
            {
                <th>
                </th>
                <th>
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach(var doktor in Model)
        {
            <tr>
                <td align="center" valign="middle">
                    <img src="@doktor.ResimUrl" style="border-radius:7px; border:1px solid #bbb9b9; max-width:145px;max-height:275px;"/>
                </td>
                
                <td align="center" valign="middle">@doktor.DoktorAdi</td>
                <td align="center" valign="middle">@doktor.Bolum</td>
                <td align="center" valign="middle">@doktor.Unvan</td>
                <td align="center" valign="middle">@doktor.DogumYili</td>
                <td align="center" valign="middle">@doktor.PoliklinikTuru.Ad </td>

                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <td align="center" valign="middle">
                        <a asp-controller="Doktor" asp-action="EkleGuncelle" asp-route-id="@doktor.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
                    </td>
                    <td align="center" valign="middle">
                        <a asp-controller="Doktor" asp-action="Sil" asp-route-id="@doktor.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole(UserRoles.Role_Admin))
{
    <div class="row pt-3 pb3">
        <div>

            <a asp-controller="Doktor" asp-action="EkleGuncelle" class="btn btn-primary" type="button">Oluştur</a>
        </div>
    </div>
}