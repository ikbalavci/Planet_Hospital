@using udemyWeb1.Haberlesme;
@model List<Randevu>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<h1>@_localization.Getkey("HastaneRandevular").Value</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                @_localization.Getkey("Hasta").Value
            </th>
           
            <th>
                @_localization.Getkey("Doktor").Value
            </th>
            <th>
                @_localization.Getkey("RandevuTarihi").Value
            </th>
            <th>
                @_localization.Getkey("RandevuSaati").Value
            </th>

            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var randevu in Model)
        {
            <tr>
                <td>@randevu.Id</td>
                <td>@randevu.HastaId</td>
                <td>@randevu.Doktor.DoktorAdi</td>
                <td>@randevu.RandevuTarihi</td>
                <td>@randevu.RandevuSaati</td>
                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <td>
                        <a asp-controller="Randevu" asp-action="EkleGuncelle" asp-route-id="@randevu.Id" type="button" class="btn btn-success" style="width:150px">@_localization.Getkey("Güncelle").Value</a>
                    </td>
                    <td>
                        <a asp-controller="Randevu" asp-action="Sil" asp-route-id="@randevu.Id" type="button" class="btn btn-danger" style="width:150px">@_localization.Getkey("Sil").Value</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>

    <div class="row pt-3 pb3">
        <div>
        <a asp-controller="Randevu" asp-action="EkleGuncelle" class="btn btn-primary" type="button">@_localization.Getkey("Oluştur").Value</a>
        </div>
    </div>


