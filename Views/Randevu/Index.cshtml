@using udemyWeb1.Haberlesme;
@model List<Randevu>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<h1>Hastane Randevuları</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                HastaId
            </th>
           
            <th>
                Doktor
            </th>
            <th>
                RandevuTarihi
            </th>
            <th>
                RandevuSaati
            </th>

            <th>
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var randevu in Model)
        {
            <tr>
                <td>@randevu.Id</td>
                <td>@randevu.HastaId</td>
                <td>@randevu.Doktor.DoktorAdi</td>
                <td>@randevu.RandevuTarihi</td>
                <td>@randevu.RandevuSaati</td>
                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <td>
                        <a asp-controller="Randevu" asp-action="EkleGuncelle" asp-route-id="@randevu.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="Randevu" asp-action="Sil" asp-route-id="@randevu.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>

    <div class="row pt-3 pb3">
        <div>    
            <a asp-controller="Randevu" asp-action="EkleGuncelle" class="btn btn-primary" type="button">Oluştur</a>
        </div>
    </div>
