@using udemyWeb1.Haberlesme;
@model List<PoliklinikTuru>

@if (TempData["basarili"] != null)
{
    <h2 style="color:red">@TempData["basarili"]</h2>
}

<h1>Poliklinik Türü Sayfası</h1>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
               
            </th>
            <th>
                Poliklinik Adı
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var poliklinikTuru in Model)
        {
            <tr>
                <td></td>
                <td>@poliklinikTuru.Ad</td>
                @if (User.IsInRole(UserRoles.Role_Admin))
                {
                    <td>
                        <a asp-controller="PoliklinikTuru" asp-action="Guncelle" asp-route-id="@poliklinikTuru.Id" type="button" class="btn btn-success" style="width:150px">Güncelle</a>
                    </td>
                    <td>
                        <a asp-controller="PoliklinikTuru" asp-action="Sil" asp-route-id="@poliklinikTuru.Id" type="button" class="btn btn-danger" style="width:150px">Sil</a>
                </td>
                }
            </tr>
        }
    </tbody>
</table>
@if (User.IsInRole(UserRoles.Role_Admin))
{
    <div class="row pt-3 pb3">
        <div>

            <a asp-controller="PoliklinikTuru" asp-action="Ekle" class="btn btn-primary" type="button">Oluştur</a>
        </div>
    </div>
}