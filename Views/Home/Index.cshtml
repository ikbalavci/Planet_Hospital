@{
    ViewData["Title"] = "Home Page";
}

@section CustomStyles
    {
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" />
    <link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />
    <style>

        .slider {
            margin: 20px;
            max-width: 450px; /* İstediğiniz genişliği ayarlayabilirsiniz */
            max-height: 600px;
            margin-left: auto;
            margin-right: auto;
            overflow: hidden; /* Taşan içeriği gizle */
            border-radius: 10px; /* Kenarları kavisli yap */
            position: relative; /* Bağlı olan içeriklere göre pozisyonu ayarla */
        }

            .slick-slide img {
                width: auto;
                height: 100%;
                max-width: 100%; /* Resmi slider içine sığdır */
                margin: 0 auto;
                border-radius: 8px; /* Kenarları kavisli yap, çerçeveden daha küçük bir değer kullanabilirsiniz */
            }
    </style>
}
<!-- Google fonts-->
<link href="https://fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet" />
<link href="https://fonts.googleapis.com/css?family=Lora:400,400i,700,700i"
      rel="stylesheet" />

@section CustomScripts
    {
    <script>
        $(document).ready(function () {
            $('.slider').slick({
                autoplay: true,
                autoplaySpeed: 2000,
                dots: true,
                infinite: true,
                speed: 500,
                slidesToShow: 1,
                slidesToScroll: 1
            });
        });
    </script>
}

@section Slider
    {
    <div class="slider">
        <div>
            <img src="/img/dso.jpg" alt="Slider Image 1">
        </div>
        
        <div>
            <img src="/img/slider1.jpg" alt="Slider Image 3">
        </div>

        <div>
            <img src="/img/slider2.jpg" alt="Slider Image 1">
        </div>

        <div>
            <img src="/img/slider3.jpg" alt="Slider Image 1">
        </div>

        <div>
            <img src="/img/slider4.jpg" alt="Slider Image 1">
        </div>
    </div>
}

